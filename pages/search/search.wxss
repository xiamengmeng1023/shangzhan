@import "../card/card.wxss";

page {
  background-color: #fff;
}

.search_main {
  width: 690rpx;
  margin: 0 auto;
}

.search_main .search_main_head {
  display: flex;
  margin-bottom: 55rpx;
}

.search_main .search_main_head .search_main_head_ipt {
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  width: 690rpx;
  margin: 0 auto;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #ccc;
  padding-left: 20rpx;
}

.search_main .search_main_head .search_main_head_btn {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999999;
}

.none_history {
  padding-top: 300rpx;
  margin: 0 auto;
  text-align: center
}

.none_history image {
  width: 130rpx;
  height: 100rpx;
  margin-bottom: 30rpx
}

.none_history .none_history_txt {
  font-size: 30rpx;
  color: #999
}

.none_history .search_main .search_main_footer .search_main_footer_tit {
  font-size: 30rpx;
  margin-bottom: 30rpx;
  background-color: red;
}

.search_main .search_main_footer .search_main_footer_list {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.search_main .search_main_footer .search_main_footer_list .history_box {
  padding: 0 15rpx;
  margin-right: 50rpx;
  text-align: center;
  margin-bottom: 35rpx;
}

.search_main .search_main_footer .search_main_footer_list .history_box:nth-child(4n) {
  margin-right: 0rpx;
}

.search_main .search_main_footer .search_main_footer_list .history_box .history_box_t {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 18rpx;
}

.search_main .search_main_footer .search_main_footer_list .history_box .history_box_b {
  text-align: center;
  font-size: 24rpx;
  color: #cbcbcb;
}

.search_main .phcolor {
  color: #ccc;
}